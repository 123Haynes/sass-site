.container {
  @include container;

  &.toolkit-grid { @include background-grid; }

  <% data.layout.resolutions.each do |resolution| %>
    @include breakpoint($<%= resolution.target %>) {
      @include container;

      &.toolkit-grid { @include background-grid; }
    }
  <% end %>
}



.row {
  @extend %clear-fix;
  @include bleed($gutter-width);
}
