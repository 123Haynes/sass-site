<% example do %>
  @use "sass:map";

  @mixin syntax-colors($args...) {
    @debug map.keywords($args);
    // (string: #080, comment: #800, $variable: $60b)

    @each $name, $color in map.keywords($args) {
      pre span.stx-#{$name} {
        color: $color;
      }
    }
  }

  @include syntax-colors(
    $string: #080,
    $comment: #800,
    $variable: #60b,
  )
